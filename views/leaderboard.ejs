<!-- /views/leaderboard.ejs -->
<%- include('layout') %>
<h1>Leaderboard</h1>

<table>
    <thead>
        <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Streak</th>
        </tr>
    </thead>
    <tbody>
        <% leaderboard.forEach((user, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= user.name %></td>
                <td><%= user.streaks %></td>
            </tr>
        <% }) %>
    </tbody>
</table>
